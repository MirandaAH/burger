<div class="container">
  <div class="row">
    <div class="col-sm-12 text-center">
      <img id="daburger" class="text-center" width="100px" src="https://www.shareicon.net/data/128x128/2016/08/18/816386_food_512x512.png">
      <h3 id="title">Eat-Da-Burger!</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <ul id="notEaten">
        {{#each burgers}}
          {{#unless this.devoured}}
            <li>
              <span>{{this.id}}. {{this.burger_name}}</span>
              <form action="/{{this.id}}?_method=PUT" method="POST">
                <input type="hidden" name="devoured" value="true">
                <button id="devour" type="submit">Devour it!</button>
              </form>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <ul id="eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
              {{this.id}}. {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 text-center">
      <form class="create-update-form" action="/" method="POST">
        <div class="form-group">
          <label for="burger_name">Burger Name:</label>
          <textarea type="text" id="burger_name" name="burger_name" cols="30" required></textarea>
        </div>
        <button class="btn btn-sm btn-primary" type="submit">Submit</button>
      </form><br>
      <p>Enter a burger you want to eat, then click the "Submit" button.</p>
    </div>
  </div>
</div>
